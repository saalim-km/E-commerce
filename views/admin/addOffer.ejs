<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Offers for Products</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- toastify css -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <%- include('./partials/header.ejs') %>
  <style>
    .product_img {
        height: 80px;
        width: 100%;
        object-fit: cover;
        border-radius: 8px;
    }
    .product_name {
      width: 200px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .action-buttons button {
      width: 120px;
      margin: 2px;
    }
    .input-group {
      display: flex;
      align-items: center;
    }
    .table {
      border-collapse: separate;
      border-spacing: 0 10px;
    }
  </style>
</head>
<body>
  <h1 class="text-center mb-4 mt-5">Manage Offers for Products</h1>

  <div class="container mt-5">
    
    <% if (message.success) { %>
     <div class="alert alert-success">
      <%= message.success %>
     </div>
    <% } %>
    <% if (message.error) { %>
     <div class="alert alert-danger">
        <%= message.error %>
     </div>
    <% } %>

    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr >
          <th>Product</th>
          <th>Product Name</th>
          <th>Sales Price</th>
          <th>Current Offer (%)</th>
          <th>Offer Expiry Date</th>
          <th>Actions</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
            <tr class="shadow-sm bg-white rounded">
              <td>
                <img src="/uploads/product-images/<%= product.images[0] %>" class="product_img" alt="<%= product.productName %>">
              </td>
              <td class="product_name"><%= product.productName %></td>
              <td>â‚¹<%= product.productOffer.length >= 1 ? Math.ceil(product.salesPriceAfterDiscount) : product.salesPrice %></td>
              <td><%= product.productOffer.length >= 1 ? product.productOffer[0].discountPercentage : '0' %> %</td>
              <td><%= product.productOffer.length >= 1 ? product.productOffer[0].offerExpiryDate.toISOString().split('T')[0] : 'Not Set' %></td>
              <td>
                <form action="/admin/add_offer/<%= product._id %>" method="POST" class="d-inline" onsubmit="return validateForm(this)">
                  <div class="input-group">
                    <input type="number" class="form-control" name="offerPercentage" placeholder="Offer %"  min="0" max="99" step="1" aria-label="Offer Percentage">
                    <input type="date" class="form-control" name="expiryDate"  aria-label="Offer Expiry Date">
                    <button type="submit" class="btn btn-dark">Add/Update</button>
                  </div>
                </form>
              </td>
              <td class="action-buttons">
                <% if (product.productOffer.length >= 1) { %>
                  <% if (product.productOffer[0].offerStatus) { %>
                    <form action="/admin/deactivate_offer/<%=product._id%>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger">Deactivate</button>
                    </form>
                  <% } else { %>
                    <form action="/admin/activate_offer/<%= product._id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-success">Activate</button>
                    </form>
                  <% } %>
                <% } else { %>
                  <button class="btn btn-secondary" disabled>No Offer</button>
                <% } %>
              </td>
            </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  <!-- toastify -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <!-- Form validation script -->
  <script>
    function validateForm(form) {
      const offerPercentage = Number(form.offerPercentage.value); // Convert to number
      const expiryDate = form.expiryDate.value;

      if (isNaN(offerPercentage) || offerPercentage < 0 || offerPercentage > 99 || !Number.isInteger(offerPercentage)) {
        Toastify({
          text: "Please enter a valid offer percentage between 0 and 99.",
          duration: 3000,
          gravity: "top",
          position: "right",
          backgroundColor : "#f44336",
          close : true,
        }).showToast();
        return false;
      }

      const currentDate = new Date().toISOString().split("T")[0];
      if (!expiryDate || expiryDate <= currentDate) {
        Toastify({
          text: "Please select a valid expiry date. It cannot be in the past.",
          duration: 3000,
          gravity: "top",
          position: "right",
          backgroundColor : "#f44336",
          close : true,
        }).showToast();
        return false;
      }

      return true;
    }
  </script>
<%- include('./partials/footer.ejs') %>