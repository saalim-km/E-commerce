<%- include('./partials/header.ejs') %>
    <main class="ml-5">
        <% if (message.success) { %>
            <h2 class="alert alert-success"><%= message.success %></h2>
        <% } %>
        <% if (message.error) { %>
            <h2 class="alert alert-danger"><%= message.error %></h2>
        <% } %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List</h2>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID or Name" class="form-control bg-white" id="searchOrder">
                </div>
            </div>

            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-6 col-md-6 me-auto">
                            <input type="text" placeholder="Search by Name or Email..." class="form-control" id="searchUser">
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Filter by Status</option>
                                <option value="pending">Pending</option>
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                                <option value="cancelled">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select class="form-select" id="itemsPerPage">
                                <option value="10">Show 10</option>
                                <option value="20">Show 20</option>
                                <option value="30">Show 30</option>
                            </select>
                        </div>
                    </div>
                </header>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody id="ordersTableBody">
                                <!-- Loop through orders data -->
                                <% orders.forEach(function(order) { %>
                                <tr>
                                    <td>#<%= order._id %></td>
                                    <td><%= order.userId.username %></td>
                                    <td><%= order.userId.email %></td>
                                    <td>â‚¹<%= order.totalAmount %></td>
                                    <td>
                                        <span class="badge rounded-pill 
                                            <%= order.status === 'Pending' ? 'alert-warning' : 
                                                order.status === 'Shipped' ? 'alert-info' : 
                                                order.status === 'Delivered' ? 'alert-success' : 
                                                'alert-danger' %>">
                                            <%= order.status%>
                                        </span>
                                    </td>
                                    <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                    <td class="text-end">
                                        <a href="/admin/orders/<%= order._id %>" class="btn btn-md rounded font-sm">View</a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination (Dynamic if necessary) -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <!-- Add pagination links here if you have multiple pages -->
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </main>

    <script>
        // JavaScript for search and filter
        document.getElementById('searchOrder').addEventListener('input', function() {
            const searchValue = this.value.toLowerCase();
            filterOrders(searchValue, 'orderId');
        });

        document.getElementById('searchUser').addEventListener('input', function() {
            const searchValue = this.value.toLowerCase();
            filterOrders(searchValue, 'customerName');
        });

        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            filterOrders(status, 'status');
        });

        function filterOrders(value, type) {
            const rows = document.querySelectorAll('#ordersTableBody tr');
            rows.forEach(row => {
                const orderId = row.cells[0].innerText.toLowerCase();
                const customerName = row.cells[1].innerText.toLowerCase();
                const status = row.cells[4].innerText.toLowerCase();

                let shouldDisplay = true;
                if (type === 'orderId' && !orderId.includes(value)) {
                    shouldDisplay = false;
                }
                if (type === 'customerName' && !customerName.includes(value)) {
                    shouldDisplay = false;
                }
                if (type === 'status' && value !== '' && !status.includes(value)) {
                    shouldDisplay = false;
                }

                row.style.display = shouldDisplay ? '' : 'none';
            });
        }
    </script>


<%- include('./partials/footer.ejs') %>