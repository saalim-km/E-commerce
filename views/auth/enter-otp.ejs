<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Enter OTP</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .otp-container {
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .otp-input {
            text-align: center;
            font-size: 1.5em;
            letter-spacing: 10px;
        }

        .timer {
            margin-top: 15px;
            font-weight: bold;
        }

        #resendBtn {
            margin-top: 10px;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .otp-container {
                padding: 20px;
            }

            .otp-input {
                font-size: 1.2em;
                letter-spacing: 5px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <!-- Main Content -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="otp-container text-center">
                <h2 class="mb-4">Enter OTP</h2>
                <!-- Display Server-Side Error Messages -->
                <% if (message && message.error) { %>
                    <div class="alert alert-danger text-center">
                        <%= message.error %>
                    </div>
                <% } %>
                <!-- OTP Form -->
                <form id="otpForm" action="/user/verify-otp" method="post" onsubmit="return validateOtpForm()">
                    <div class="mb-3">
                        <input 
                            type="text" 
                            id="otpInput" 
                            name="otp" 
                            class="form-control otp-input" 
                            placeholder="------" 
                            maxlength="6"  
                            aria-describedby="otpHelp"
                        >
                        <p class="error-message text-danger mt-2" id="otpError"></p>
                    </div>
                    <button 
                        class="btn btn-primary w-100" 
                        style="cursor: pointer;" 
                        id="submitOtpBtn" 
                        type="submit"
                    >
                        Verify OTP
                    </button>
                </form>
                <!-- Timer and Resend Button -->
                <p class="timer">Resend OTP in <span id="timer">60</span> seconds</p>
                <button 
                    class="btn btn-secondary w-100" 
                    style="cursor: pointer; display: none;" 
                    onclick="resendOtp()" 
                    id="resendBtn"
                >
                    Resend OTP
                </button>
            </div>
        </div>
    </div>
    <!--End Main Content-->

    <!-- Footer (if any) -->
    <%- include('./partials/footer.ejs') %>

    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
    </script>
    <!-- SweetAlert2 for Alerts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- jQuery (for AJAX and DOM manipulation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8jhAXgABdl3bvXOGC+rDDZMxwO1S9WPLN0GHF4Y16eAzrR"
        crossorigin="anonymous"></script>


    <script>
        let timeLeft = 60;
        const timerDisplay = document.getElementById('timer');
        const submitOtpBtn = document.getElementById('submitOtpBtn');
        const resendBtn = document.getElementById('resendBtn');
        const otpError = document.getElementById('otpError');

        let timerInterval;

        function startTimer() {
            timeLeft = 60;
            timerDisplay.textContent = timeLeft;
            resendBtn.style.display = 'none';
            submitOtpBtn.disabled = false;

            timerInterval = setInterval(function() {
                timeLeft--;
                timerDisplay.textContent = timeLeft;

                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    resendBtn.style.display = 'block';
                    submitOtpBtn.disabled = true;
                }
            }, 1000);
        }

        function resendOtp() {
            // Disable the resend button to prevent multiple clicks
            resendBtn.disabled = true;

            $.ajax({
                type: 'POST',
                url: '/user/resend-otp',
                success: function(res) {
                    if(res.success){
                        Swal.fire({
                            icon: 'success',
                            title: 'OTP resent successfully',
                            showConfirmButton: false,
                            timer: 1500,
                        });
                        startTimer();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: res.message || 'An error occurred while resending OTP.',
                        });
                        resendBtn.disabled = false;
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while resending OTP.',
                    });
                    resendBtn.disabled = false;
                }
            });
        }

        // Initialize the timer on page load
        startTimer();
    </script>

    <!-- OTP Form Validation and Submission -->
    <script>
        function validateOtpForm(){
            const otp = document.getElementById('otpInput').value.trim();
            const otpError = document.getElementById('otpError');

            otpError.textContent = "";

            // Validate OTP: Must be exactly 6 digits
            const otpPattern = /^\d{6}$/;
            if(!otpPattern.test(otp)){
                otpError.textContent = "Please enter a valid 6-digit OTP.";
                return false;
            }

            // Proceed with AJAX form submission
            $.ajax({
                type : 'POST',
                url : '/user/verify-otp',
                data : { otp : otp },
                contentType: 'application/x-www-form-urlencoded', 
                success : function(res){
                    if(res.success){
                        Swal.fire({
                            icon : 'success',
                            title : "OTP verified successfully",
                            showConfirmButton : false,
                            timer:1500,
                        }).then(()=> {
                            window.location.href = res.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            toast : true,
                            position : "top",
                            title : "invalid otp please try again",
                            showConfirmButton: false,
                            timer: 2500,
                            timerProgressBar: true,
                            background : "red",
                            color : "white",
                        });
                    }
                },
                error:function (){
                    Swal.fire({
                    toast : true,
                    position : "top",
                    title : "invalid otp please try again",
                    showConfirmButton: false,
                    timer: 2500,
                    timerProgressBar: true,
                    background : "red",
                    color : "white",
                });
                }
            });

            return false; // Prevent default form submission
        }
    </script>
</body>
</html>
