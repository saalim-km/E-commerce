<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <!-- Custom Styles -->
    <style>
        .password-container {
            position: relative;
        }

        .password-container i {
            position: absolute;
            right: 10px;
            top: 38px; /* Adjusted for better alignment */
            cursor: pointer;
            font-size: 1.2em;
            color: #6c757d;
        }

        .error-message {
            color: red;
            font-size: 0.9em;
        }

        .login-container {
            margin-top: 100px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        body {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar (if any) -->
    <%- include('./partials/header.ejs') %>

    <!-- Main Content -->
    <div class="container d-flex justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10 login-container">
            <h2 class="text-center mb-4">Login</h2>
            <!-- Login Form -->
            <form id="loginForm" action="/user/login" method="POST" onsubmit="return validateForm()">
                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input 
                        type="email" 
                        class="form-control" 
                        id="email" 
                        name="email" 
                        placeholder="you@example.com"  
                        aria-describedby="emailHelp"
                    >
                    <p class="error-message" id="emailError"></p>
                </div>
                <!-- Password Field -->
                <div class="mb-3 password-container">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        class="form-control" 
                        id="password" 
                        name="password" 
                        placeholder="Enter your password"  
                        aria-describedby="passwordHelp"
                    >
                    <i class="bi bi-eye-slash" id="togglePassword"></i>
                    <p class="error-message" id="passwordError"></p>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Login</button>
                <!-- Display Server-Side Messages -->
                <% if (message && message.error) { %>
                    <div class="alert alert-danger text-center mt-3">
                        <%= message.error %>
                    </div>
                <% } %>
                <% if (typeof message === 'string' && message.length > 0) { %>
                    <div class="alert alert-danger text-center mt-3">
                        <%= message %>
                    </div>
                <% } %>
            </form>
            <!-- Social Login Options -->
            <div class="text-center mt-4">
                <p>or</p>
                <div class="d-flex justify-content-center gap-2">
                    <a href="/auth/google" class="btn btn-danger">
                        <i class="bi bi-google"></i> Login with Google
                    </a>
                    <a href="/auth/facebook" class="btn btn-primary">
                        <i class="bi bi-facebook"></i> Login with Facebook
                    </a>
                </div>
            </div>
            <!-- Additional Links -->
            <div class="text-center mt-4">
                <p>
                    <a href="/user/forgotPassword" class="text-decoration-none">Forgot your password?</a> &nbsp; | &nbsp;
                    <a href="/user/signup" class="text-decoration-none">Create an account</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Footer (if any) -->
    <%- include('./partials/footer.ejs') %>

    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
    </script>
    <!-- SweetAlert2 for Enhanced Alerts (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- JavaScript for Password Toggle and Validation -->
    <script>
        // Password Visibility Toggle
        const toggler = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("password");

        toggler.addEventListener("click", () => {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            toggler.classList.toggle("bi-eye");
            toggler.classList.toggle("bi-eye-slash");
        });

        // Form Validation
        function validateForm(){
            const email = document.getElementById("email").value.trim();
            const password = document.getElementById("password").value.trim();
            const emailError = document.getElementById("emailError");
            const passwordError = document.getElementById("passwordError");
            let isValid = true;

            // Clear previous error messages
            emailError.textContent = "";
            passwordError.textContent = "";

            // Email Validation
            const emailPattern = /^[^\s@]+@(gmail\.com|yahoo\.com|microsoft\.com)$/;
            if(!emailPattern.test(email)){
                emailError.textContent = "Please enter a valid email address.";
                isValid = false;
            }

            // Password Validation
            if(password.length < 6){
                passwordError.textContent = "Password must be at least 6 characters long.";
                isValid = false;
            }

            return isValid;
        }
    </script>

</body>
</html>
