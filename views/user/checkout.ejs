<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <!-- Toastify -->
    <link rel="stylesheet" href="css/fonts.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <style>
        /* Checkout page styles */
        .checkout-container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }
        .checkout-container .col-lg-6 {
            width: 48%;
        }
        .checkout-container h4 {
            font-weight: 600;
            margin-bottom: 20px;
        }
        .form-check {
            margin-bottom: 10px;
        }
        .order-items {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
        }
        .order-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .order-item img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            margin-right: 15px;
        }
        .order-item p {
            margin: 0;
            font-size: 14px;
        }
        .apply-coupon {
            margin-top: 20px;
        }
        .apply-coupon input {
            width: 70%;
            display: inline-block;
            margin-right: 10px;
        }
        .payment-methods {
            margin-top: 20px;
        }
        .payment-methods .form-check {
            margin-bottom: 10px;
        }
        .btn {
            margin-top: 20px;
            width: 100%;
        }
        .order-summary {
            border: 1px solid #ddd;
            padding: 20px;
        }
    </style>
</head>
<body class="page-template belle">
<form id="checkoutForm" action="/user/checkout" method="POST" onsubmit="return validateForm()">
<div class="pageWrapper">

    <%- include('partials/header'); %>

    <!-- Checkout Section -->
    <div class="checkout-container">

            <div class="col-lg-6">
                <!-- Address Section -->
                <h4>Select Shipping Address</h4>
                <% if (address.length > 0) { %>
                    <% address.forEach(function(add, index) { %> 
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="radio" 
                                   name="selectedAddress" 
                                   id="address_<%= add._id %>" 
                                   value="<%= add._id %>" 
                                   <% if (index === 0) { %> checked <% } %> 
                                   required>
                            <label class="form-check-label col-lg-5" for="address_<%= add._id %>">
                                <%= add.fullName%> , <%= add.house %> , <%= add.state %> , <%= add.pincode %>
                            </label>
                        </div>
                    <% }); %>
                <% } else { %>
                    <h2>No Saved Address </h2>
                    <a href="/user/address/<%= user._id %>" class="btn btn-small">Add an address</a>
                <% } %>
            </div>

            <div class="col-lg-6 order-summary">
                <!-- Order Summary Section -->
                <h4>Order Summary</h4>
                <div class="order-items">
                    <% cart.forEach(function(item) { %>
                        <div class="order-item">
                            <img src="/uploads/product-images/<%= item.productId.images[0] %>" alt="Product Image">
                            <div>
                                <p><strong><%= item.productId.productName %></strong></p>
                                <p>Size: <%= item.sizes[0].size %></p>
                                <p>Quantity: <%= item.sizes[0].quantity %></p>
                                <p>Price: ₹<%= item.productId.salesPrice %></p>
                                <p>SubTotal: ₹<%= item.productId.salesPrice * item.sizes[0].quantity %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <p><strong>Total:</strong> ₹<%= cart.reduce((total, item) => total + (item.productId.regularPrice * item.sizes[0].quantity), 0) %></p>

                <!-- Hidden Input for Cart Items -->
                <% cart.forEach(function(item, index) { %>
                    <input type="hidden" name="cartItems[<%= index %>][productId]" value="<%= item.productId._id %>">
                    <input type="hidden" name="cartItems[<%= index %>][quantity]" value="<%= item.sizes[0].quantity %>">
                    <input type="hidden" name="cartItems[<%= index %>][size]" value="<%= item.sizes[0].size %>">
                <% }); %>

                <!-- Coupon Input -->
                <div class="apply-coupon">
                    <input type="text" class="form-control" name="couponCode" id="couponCode" placeholder="Enter coupon code" />
                </div>

                <!-- Payment Methods Section -->
                <div class="payment-methods">
                    <h5>Payment Methods</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD">
                        <label class="form-check-label" for="cod">Cash on Delivery</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="stripe" value="Stripe">
                        <label class="form-check-label" for="stripe">Stripe</label>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="placeOrderBtn" type="submit" class="btn btn-dark">Place Order</button>
            </div>
        <!-- End Form -->
    </div>
</div>
</form>

<!-- toasktify -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const checkoutForm = document.getElementById("checkoutForm");

        checkoutForm.addEventListener("submit", (event) => {
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked');

            // Validate if an address is selected
            if (!selectedAddress) {
                event.preventDefault();
                Toastify({
                    text: "Please select a shipping address.",
                    duration: 3000,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "red",
                }).showToast();
                return;
            }

            // Validate if a payment method is selected
            if (!selectedPaymentMethod) {
                event.preventDefault();
                Toastify({
                    text: "Please select a payment method.",
                    duration: 3000,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "red",
                }).showToast();
                return;
            }
        });
    });
</script>


<%- include('../auth/partials/footer.ejs') %>
