<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Designs | Savage</title>
    <!-- favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon/favicon-16x16.png">
<link rel="manifest" href="/assets/images/favicon/site.webmanifest">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- Custom Styles toastify-->
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow-md fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <a href="/" class="flex-shrink-0 flex items-center">
                        <span class="text-2xl font-bold ">Savage</span>
                    </a>
                </div>
                <div class="hidden sm:ml-6 sm:flex sm:space-x-8" style="margin-top: 1%;">
                    <a href="/user/custom_tshirt" class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium">Home</a>
                    <a href="/user/designs" class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium">My Designs</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 pb-20">
        <div class="container mx-auto px-4 mt-5">
            <% if (designs.length > 0) { %>
            <h1 class="text-3xl font-extrabold text-center text-gray-900 mb-6">My Custom Designs</h1>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6">
                    <% designs.forEach(design => { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-xl">
                            <div class="h-64 bg-gray-100 flex items-center justify-center p-4">
                                <img src="<%= design.image %>" alt="Blue T-shirt" class="max-h-full max-w-full object-contain">
                            </div>
                            <div class="p-6 text-center">
                                <h3 class="text-lg font-semibold">Custom T-Shirt</h3>
                                <p class="mb-5">₹ <%= design.price %></p>
                                <div class="flex justify-center space-x-4">
                                    <a href="/user/custom_checkout?designId=<%= design._id %>" class="block w-3/4 bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded-md text-center transition duration-300 ease-in-out">
                                        Checkout
                                    </a>
                                    <i class="fas fa-trash-alt text-red-500 hover:text-red-700 cursor-pointer text-2xl mt-3" 
                                       onclick="deleteDesign('<%= design._id %>')"></i>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else {%>
                <div class="bg-gray-100 text-center p-8 rounded-lg">
                    <h2 class="text-2xl font-semibold mb-4">No Designs Found</h2>
                    <p class="text-gray-600 mb-6">You haven't created any custom T-shirt designs yet. Start designing your unique look now!</p>
                    <a href="/user/custom_tshirt" class="inline-block bg-black text-white font-bold py-2 px-6 rounded-md hover:bg-gray-800 transition duration-300 ease-in-out">
                        Pick a T-Shirt
                    </a>
                </div>
            <% } %>    
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-black text-white py-6 mt-5 ">
        <div class="container mx-auto px-4 text-center">
            <p class="text-lg font-semibold">© 2024 | Savage</p>
            <p class="text-sm mt-2">All rights reserved</p>
            <div class="flex justify-center mt-4 space-x-4">
                <a href="https://twitter.com" target="_blank" class="text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M22.46 6.003c-.793.352-1.647.588-2.545.695a4.513 4.513 0 001.984-2.49 9.033 9.033 0 01-2.861 1.095 4.515 4.515 0 00-7.692 4.115A12.804 12.804 0 013.16 4.908a4.515 4.515 0 001.396 6.02 4.465 4.465 0 01-2.047-.565v.056a4.515 4.515 0 003.618 4.426 4.51 4.51 0 01-2.043.078 4.516 4.516 0 004.215 3.132A9.054 9.054 0 012 19.54a12.764 12.764 0 006.914 2.027c8.304 0 12.847-6.877 12.847-12.847 0-.196-.005-.392-.014-.586a9.204 9.204 0 002.262-2.351z"/>
                    </svg>
                </a>
                <a href="https://github.com" target="_blank" class="text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.867 8.167 6.839 9.49.5.091.682-.216.682-.482 0-.237-.008-.868-.013-1.703-2.782.604-3.369-1.342-3.369-1.342-.455-1.157-1.11-1.465-1.11-1.465-.908-.62.07-.608.07-.608 1.003.07 1.532 1.03 1.532 1.03.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.221-.253-4.555-1.113-4.555-4.947 0-1.093.39-1.988 1.029-2.687-.103-.253-.446-1.272.099-2.65 0 0 .84-.269 2.75 1.026A9.579 9.579 0 0112 6.845a9.53 9.53 0 012.503.336c1.909-1.295 2.748-1.026 2.748-1.026.546 1.378.203 2.397.1 2.65.64.699 1.028 1.594 1.028 2.687 0 3.843-2.337 4.692-4.565 4.94.359.31.678.921.678 1.856 0 1.338-.012 2.418-.012 2.748 0 .268.181.576.688.478C19.135 20.162 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                    </svg>
                </a>
            </div>
        </div>
    </footer>

</body>
</html>

    <!-- j query -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- toastify -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <!-- sweet alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
<script>
    function deleteDesign(id) {
        console.log(id);
        
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to delete this design? This action cannot be undone.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if(result.isConfirmed){
                $.ajax({
                url : "/user/delete_design",
                method : "POST",
                data : JSON.stringify({
                    id : id
                }),
                contentType : "application/json",
                success : (res)=> {
                    if(res.success) {
                        location.reload();
                    }else {
                        Toastify({
                        text: "An error occured please try again later.",
                        duration: 3000,
                        gravity: "top",
                        position: "center",
                        close : true,
                        backgroundColor: "#dc3545",
                    }).showToast();
                    }
                }
            })   
            }
        })
    }
</script>