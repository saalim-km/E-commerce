<!-- CSS Styles -->
<style>
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
    opacity: 0;
    animation: gridFadeIn 0.6s ease-out forwards;
  }

  /* Optimized Image Loading Styles */
  .image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 100%; /* 1:1 Aspect Ratio */
    background-color: #f8f8f8; /* Placeholder color */
    overflow: hidden;
    border-radius: 12px 12px 0 0;
  }

  .product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .product-image.loaded {
    opacity: 1;
  }

  /* Animation Keyframes */
  @keyframes gridFadeIn {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Product Card Styles */
  .product-item {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    animation: fadeIn 0.8s ease-out forwards;
  }

  .product-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .product-info {
    padding: 1.5rem;
    background: white;
  }

  .product-name {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .price {
    font-size: 1.2rem;
    font-weight: 700;
    color: #e74c3c;
  }

  .category {
    font-size: 0.9rem;
    color: #7f8c8d;
    margin-bottom: 1rem;
  }

  /* Button Styles */
  .animated-button {
    display: inline-block;
    padding: 10px 20px;
    color: #fff;
    background-color: #141313;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    transition: transform 0.3s ease, background-color 0.3s ease;
    text-align: center;
  }

  .animated-button:hover {
    transform: translateY(-2px);
    background-color: #2c2c2c;
  }

  /* Slider Styles */
  .slideshow {
    position: relative;
    margin-bottom: 3rem;
  }

  .slide img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>

<!--Body Content-->
<div id="page-content">
    <!--Home slider-->
    <div class="slideshow slideshow-wrapper pb-section">
        <div class="home-slideshow">
            <div class="slide">
                <img 
                    src="/assets/images/slideshow-banners/1.jpg"
                    alt="Shop Our New Collection"
                    width="1920"
                    height="800"
                    fetchpriority="high"
                />
                <div class="slideshow__text-wrap slideshow__overlay classic middle">
                    <div class="slideshow__text-content middle">
                        <div class="container">
                            <div class="wrap-caption right">
                                <h2 class="h1 mega-title slideshow__title">Our New Collection</h2>
                                <span class="mega-subtitle slideshow__subtitle">Save up to 50% Off</span>
                                <a href="/user/shop" class="animated-button">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="slide">
                <img 
                    src="/assets/images/slideshow-banners/2.jpg"
                    alt="Summer Collection"
                    width="1920"
                    height="800"
                    loading="lazy"
                />
                <div class="slideshow__text-wrap slideshow__overlay classic middle">
                    <div class="slideshow__text-content middle">
                        <div class="container">
                            <div class="wrap-caption right">
                                <h2 class="h1 mega-title slideshow__title">Summer Collection</h2>
                                <span class="mega-subtitle slideshow__subtitle">Explore Now</span>
                                <a href="/user/shop" class="animated-button">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Home slider-->

    <div class="container">
        <div class="product-grid">
            <% products.forEach((product, index) => { %>
                <div class="product-item" style="animation-delay: <%= index * 0.1 %>s;">
                    <a href="/user/products/<%= product._id %>">
                        <div class="image-wrapper">
                            <img 
                                src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
                                data-src="/uploads/product-images/<%= product.images[0] %>"
                                alt="<%= product.productName %>"
                                class="product-image"
                                width="300"
                                height="300"
                                loading="lazy"
                            />
                        </div>
                        <div class="product-info">
                            <h5 class="product-name"><%= product.productName %></h5>
                            <% if (product.salesPriceAfterDiscount && product.productOffer[0].offerStatus) { %>
                                <p class="price">
                                    ₹<%= product.salesPriceAfterDiscount %> 
                                    <del class="text-muted">₹<%= product.salesPrice %></del> 
                                    <span class="text-success font-weight-bold">
                                        <%= product.productOffer[0].discountPercentage %>% OFF
                                    </span>
                                </p>
                            <% } else { %>
                                <p class="price">₹<%= product.salesPrice %></p>
                            <% } %>
                            <p class="category">
                                <%= product.category.name %>
                            </p>
                            <span class="animated-button">View Product</span>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-5 mb-5">
    <a href="/user/shop" class="animated-button">View more..</a>
    </div>
</div>

